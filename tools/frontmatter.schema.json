{
  "$id": "https://pim-sre.lab/schemas/frontmatter.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PIM SRE Front Matter",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "title",
    "doc_type",
    "status",
    "version",
    "owners",
    "last_updated",
    "tags"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "doc_type": {
      "type": "string",
      "enum": [
        "style_guide",
        "design_doc",
        "adr",
        "rfc",
        "runbook",
        "glossary",
        "policy",
        "navigation",
        "governance"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "in_review",
        "published"
      ]
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*)?(?:\\+[0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*)?$"
    },
    "owners": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$|^@[A-Za-z0-9_/.-]+$"
      }
    },
    "last_updated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      }
    },
    "adr_id": {
      "type": "string",
      "pattern": "^ADR-\\d{3}$"
    },
    "rfc_id": {
      "type": "string",
      "pattern": "^RFC-\\d{3}$"
    },
    "runbook_id": {
      "type": "string",
      "pattern": "^RB-\\d{3}$"
    },
    "service_tier": {
      "type": "string"
    },
    "audience": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "review_window": {
      "type": "string",
      "pattern": "^\\d+\\s?(days|hours)$"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "decision_date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    }
  },
  "unevaluatedProperties": false
}
